# Agent Portal Environment Variables
# 이 파일을 복사하여 .env로 사용하세요: cp .env.example .env

# Database
MARIADB_ROOT_PASSWORD=rootpass
MARIADB_DATABASE=agent_portal
REDIS_PASSWORD=redispass

# MinIO
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin12345

# Observability
OBSERVABILITY_ENABLED=true
HELICONE_PROXY_BASE=/embed/helicone
LANGFUSE_PROXY_BASE=/embed/langfuse
SECURITY_PROXY_BASE=/embed/security

# Kong Admin
KONG_ADMIN_PROXY_BASE=/embed/kong-admin
KONG_ADMIN_INTERNAL_URL=http://konga:1337

# Default Workspace
DEFAULT_WORKSPACE_FILTER=ws_default

# Backend BFF (Frontend에서 사용)
VITE_BFF_BASE_URL=http://localhost:8000

# LiteLLM Gateway
LITELLM_MASTER_KEY=sk-your-master-key
LITELLM_DB_PASSWORD=litellm_secure_password
LITELLM_SALT_KEY=sk-salt-random-long-key

# LLM Provider Keys
OPENROUTER_API_KEY=sk-or-your-api-key

# Monitoring (ClickHouse + OTEL)
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_DATABASE=otel_2
DEFAULT_PROJECT_ID=8c59e361-3727-418c-bc68-086b69f7598b

# Langfuse (Optional - Quality Management)
LANGFUSE_DATABASE_URL=postgresql://postgres:postgres@langfuse-db:5432/postgres
LANGFUSE_HOST=http://localhost:3003
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# News Data Path (서버 환경에서 설정)
NEWS_DATA_PATH=/path/to/mcp-naver-news/src/data

